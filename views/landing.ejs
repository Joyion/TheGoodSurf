<%- include("partials/header"); -%>


<main>
    <!-- BEST PLACES TO SURF THIS WEEK-->

    <div class="container bodycontainer">
        <div class="row py-1 justify-content-center text-center">
            <div class="col">
                <h1 class="py-2 headertitle">GOOD FORECAST + GOOD GEAR = <br> THE GOOD SURF</h1>
                <p class="headersection">Find accurate forecasts and honest reviews on gear.</p>
            </div>
        </div>
        <!-- start of row for best spots-->
        <div class="row my-3 py-1 section">
            <div class="col">
                <h2>BEST SPOTS OF THE WEEK</h2>
            </div>

        </div>
        <div class="row justify-content-center">
            <div class="col">
                <div class="bd-example">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="<%=beaches[0].imgUrl%>"
                                    class="d-block w-100" alt="...">
                                <div class="carousel-caption d-block">
                                    <h5><a href="/locations/<%=beaches[0].area%>/<%=beaches[0]._id%>"><%=beaches[0].name%></a></h5>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="<%=beaches[1].imgUrl%>"
                                    class="d-block w-100" alt="...">
                                <div class="carousel-caption d-block">
                                    <h5><a href="/locations/<%=beaches[1].area%>/<%=beaches[1]._id%>"><%=beaches[1].name%></a></h5>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="<%=beaches[2].imgUrl%>"
                                    class="d-block w-100" alt="...">
                                <div class="carousel-caption d-block">
                                    <h5><a href="/locations/<%=beaches[2].area%>/<%=beaches[2]._id%>"><%=beaches[2].name%></a></h5>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!-- end of column -->
            </div>
            <!-- end of row-->
        </div>

        <!-- LATEST GEAR REVIEWS -->
        <!-- row for reviews -->
        <div class="row my-5 p-2 text-right section justify-content-center">
            <div class="col">
                <h1>BEST REVIEWS OF THE WEEK</h1>
            </div>
        </div>
        <div class="row mb-3 smallimg text-center justify-content-between">
            <div class="col-12 col-lg-4 mb-5">
                <img src="<%=reviews[0].imgUrl%>"
                    alt="">
                <h1><%=reviews[0].product%></h1>
                <p class="my-3"><%=reviews[0].description%></p>
                 <a href="/reviews/<%=reviews[0].productType%>/<%=reviews[0]._id%>"class="btn btn-dark">Read More </a>
            </div>
            <div class="col-12 col-lg-4 mb-5">
                <img src="<%=reviews[1].imgUrl%>"
                    alt="">
                <h1><%=reviews[1].product%></h1>
                <p class="my-3"><%=reviews[1].description%></p>
               <a href="/reviews/<%=reviews[1].productType%>/<%=reviews[1]._id%>" class="btn btn-dark">Read More </a>
            </div>
            <div class="col-12 col-lg-4 mb-5">
                <img src="<%=reviews[2].imgUrl%>"
                    alt="">
                <h1><%=reviews[2].product%></h1>
                <p class="my-3"><%=reviews[2].description%></p>
                 <a href="/reviews/<%=reviews[2].productType%>/<%=reviews[2]._id%>"class="btn btn-dark">Read More</a>
            </div>
            <!-- end of article row-->
        </div>

        <!-- end of container-->
    </div>



</main>





<%- include("partials/footer"); -%>