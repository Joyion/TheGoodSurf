<% include ../partials/header %>



<div class="container">
<!--main container above-->

<div class="aligncenter m-3">
<h1>Gear Reviews</h1> 
<br>
<a href=""> VIEW ALL REVIEWS</a>
<a href="">ADD REVIEW</a>
</div>


<!-- loop through each product and display most recent 3 of each type-->
<% products.forEach(function(type){ %>
<div class="row m-3">
    <div class="col">
        <h2><%=type[0].productType%></h2>
        <a href="/reviews/<%=type[0].productType%>/">All <%=type[0].productType%> Reviews </a>
    </div>
</div>
<div class="row smallimg aligncenter">
<% type.forEach( function(product) { %>
    <div class="col-4">
        <img src="<%= product.imgUrl %>"
            alt="">
        <div>
            <h3><%= product.product %></h3>
            <p><%= product.description %></p>
            <br>
            <a href="/reviews/<%=product.productType%>/<%=product._id%>">READ MORE</a>
        </div>
    </div>
<% }); %>
<!-- end of row-->
<div class="row">
    <div class="col">
        <a href="/reviews/<%=type[0].productType%>/"> More <%=type[0].productType%> Reviews</a>
    </div>
</div>

</div>
<% }); %>


<!-- end of main container-->
</div>
