<% include ../partials/header %>



<div class="container">
    <!--main container above-->



    <!-- Title -->
    <div class="row py-4 text-center">
        <div class="col">
            <h2><%=beaches[0].area%></h2>
        </div>

    </div>

    <!-- List All beaches of area-->
    <div class="row">
        <% beaches.forEach(function(beach) { %>
        <div class="col-3">
            <div class="card" >
                        <h5 class="card-header"><%=beach.name%></h5>
                        <img class="card-img-top" src="<%=beach.imgUrl%>" alt="">
                        <div class="card-body">
                        <h5 class="card-title">STARS <%=beach.stars%></h5>
                        <p class="card-text"><%=beach.description.slice(0, 50)%>...</p>
                        <a href="/locations/<%=beach.area%>/<%=beach._id%>" class="btn btn-primary">Get Forecast</a>
                        </div>
                </div>
        </div>
  <%  }); %>
    </div>
        
            
   
    <!-- end of extras row-->



    <!-- end of main container-->
</div>
