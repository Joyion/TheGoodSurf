<% include ../partials/header %>



<div class="container bodycontainer">
<!--main container above-->

<div class="aligncenter my-3 py-3">
<h1 class="subtitle">The most popular surf spots from around the world</h1> 
<br>
</div>


<!-- Surboard reviews -->
<% locations.forEach(function(area) { %>

<div class="row my-3 py-2 text-center section">
    <div class="col">
        <h2><%=area[0].area %></h2>
        <a class="btn btn-secondary btn-sm my-2" href="/locations/<%=area[0].area%>/">View all from <%=area[0].area%></a>
    </div>
</div>
<div class="row smallimg aligncenter my-5">
    <% area.forEach( function(beach){ %>
    <div class="col my-4">
        <img src="<%=beach.imgUrl%>"
            alt="">
        <div>
            <h3 class="subtitle py-2"><%= beach.name %></h3>
            <p><%= beach.description.slice(0, 100) %>...</p>
            <br>
            <a class="btn btn-dark" href="/locations/<%=beach.area%>/<%=beach._id%>">READ MORE</a>
        </div>
    </div>
  <%  }); %>
<!-- end of row -->
</div>
<% }) %>

<!-- end of main container-->
</div>
<script>
    
</script>

<% include ../partials/footer %>